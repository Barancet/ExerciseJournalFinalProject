<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="weightViewModel"
            type="project.st991493546.baran.weight.WeightViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".weight.WeightEdit">

        <EditText
            android:id="@+id/editTextSets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Sets"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/editTextResp"
            app:layout_constraintTop_toBottomOf="@+id/editTextResp" />

        <EditText
            android:id="@+id/editTextType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="4dp"
            android:ems="10"
            android:hint="Type"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/editTextDateWeight"
            app:layout_constraintStart_toStartOf="@+id/editTextDateWeight" />

        <EditText
            android:id="@+id/editTextResp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Reps"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/editTextDateWeight"
            app:layout_constraintTop_toBottomOf="@+id/editTextDateWeight" />

        <EditText
            android:id="@+id/editTextDateWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginTop="141dp"
            android:ems="10"
            android:hint="Date"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnUpdateWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="#2196F3"
            android:text="Update"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextSets" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>